{
  "env": {
    "browser": true,
    "es2021": true
  },
  "ignorePatterns": [
    "dist/"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "@typescript-eslint",
    "react"
  ],
  "rules": {
    "indent": [
      "warn",
      "tab"
    ],
    "linebreak-style": [
      "warn",
      "windows"
    ],
    "quotes": [
      "warn",
      "double"
    ],
    "semi": [
      "warn",
      "never"
    ],
    "react/jsx-uses-react": "warn",
    "react/jsx-uses-vars": "warn",
    "@typescript-eslint/no-var-requires": "off"
  }
}